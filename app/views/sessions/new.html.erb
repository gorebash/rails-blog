<h1 class="text-center mt-4">Sign In</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url:login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "User's email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <%= f.text_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
        </div>

        <%= f.submit "Login", class: "btn btn-outline-light btn-lg" %>
      <% end %>
    </div>

    <div class="col-10 mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div> 