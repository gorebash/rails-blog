
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "User's email" %>
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <%= f.text_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
        </div>

        <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-light btn-lg") %>
      <% end %>
    </div>
  </div>
</div> 