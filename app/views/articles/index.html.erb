<h1>Articles listing</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
    </tr>
    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to('Show', article_path(article)) %></td>
        <td><%= link_to 'Edit', edit_article_path(article, :edit) %></td>
        <td><%= link_to('Delete', article_path(article), data: { turbo_method: :delete, confirm: "Are you sure?" }) %></td>
    </tr>
    <% end %>
</table>

<p><%= link_to "New article", new_article_path %> | <%= link_to "Home", root_path %></p>